@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using UUWebstore.Models;

<!-- Slide1 Original put After itin commited -->
<section class="slide1">
        <div class="wrap-slick1">
            <div class="slick1">
                @{ foreach (var banner in ViewBag.banners)
                    {
                        <div class="item-slick1 item1-slick1" style="background-image: url(@banner.imgWebAddress);">
                            <div class="wrap-content-slide1 sizefull flex-col-c-m p-l-15 p-r-15 p-t-150 p-b-170">                                
                            </div>
                        </div>
                    }
                }               

            </div>
        </div>
    </section>

<section class="banner bgwhite p-t-40 p-b-40">
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-md-8 col-lg-12 m-l-r-auto">
                <!-- block1 -->
                @{ foreach (var productCategory in  ViewBag.ProductCategory)
                    {
                        <div class="col-sm-12 col-md-6 col-lg-4 p-b-50">
                            <!-- Block2 -->
                            <div class="block2">
                                <div class="block1 hov-img-zoom pos-relative m-b-30">
                                    <img src="@productCategory.imgWebAddress">
                                    <div class="block1-wrapbtn w-size2">
                                        <!-- Button -->
                                        <a  href='@Url.Action("Product", "Home", new { category = productCategory.productCategoryId })' class="flex-c-m size2 m-text2 bg3 hov1 trans-0-4">
                                            @productCategory.name
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                       
                    }
                }
                         
            </div>          
        </div>
    </div>
</section>

<!-- New Product -->
<section class="newproduct bgwhite p-t-45 p-b-105">
    <div class="container">
        <div class="sec-title p-b-60">
            <h3 class="m-text5 t-center">
                Featured Products
            </h3>
        </div>

        <!-- Slide2 -->
        <div class="wrap-slick2">
            <div class="slick2">

               
                    <!-- Block2 -->
                    @{ foreach (var Fproduct in ViewBag.featuredProduct)
                        { <div class="item-slick2 p-l-15 p-r-15">
                    <div class="block2">
                        <div class="block2-img wrap-pic-w of-hidden pos-relative block2-labelnew">
                            <img src=@Fproduct.imgWebAddress alt="IMG-PRODUCT">

                            <div class="block2-overlay trans-0-4">
                                <a href='#'  class="block2-btn-addwishlist hov-pointer trans-0-4">
                                    <i class="icon-wishlist icon_heart_alt" aria-hidden="true"></i>
                                    <i class="icon-wishlist icon_heart dis-none" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>

                        <div class="block2-txt p-t-20">
                            <a href='@Url.Action("ProductsDetails","Home", new {title= @Fproduct.slugURL, productId = @Fproduct.productCategoryId})' class="block2-name dis-block s-text3 p-b-5">
                               @Fproduct.productTitle
                            </a>

                            <span class="block2-price m-text6 p-r-5">
                                @*$75.00*@
                            </span>
                        </div>
                    </div>
                </div>
                        }
                    }

                
            </div>
        </div>

    </div>
</section>

<!-- Banner2 -->
<section class="banner2 bg5 p-t-55 p-b-55">
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-md-8 col-lg-6 m-l-r-auto p-t-15 p-b-15">
                <div class="hov-img-zoom pos-relative">
                  
                    <iframe width="854" height="420" src=@ViewBag.youTubePramotionAdmin frameborder="0" allowfullscreen></iframe>
                </div>
            </div>

            <div class="col-sm-10 col-md-8 col-lg-6 m-l-r-auto p-t-15 p-b-15">
                <div class="bgwhite hov-img-zoom pos-relative p-b-20per-ssm">
                     @Html.Raw(ViewBag.BlockPramotionAdmin)
                </div>
            </div>
        </div>
    </div>
</section>

@{ var d= "";
    if (TempData["message"] != null)
    {
        d = TempData["message"].ToString();
    }

} 

<script>
    debugger
    if ('@d'!= '')
    {
        bootbox.alert({
            title: "Confirmation !",
            message: '@d'
        });
    }
</script>